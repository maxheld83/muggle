# TODO setting HTTP user agent is only necessary for rocker
user_agent <- paste(
  getRversion(),
  R.version$platform,
  R.version$arch,
  R.version$os
)
options(
  HTTPUserAgent = sprintf(
    "R/%s R (%s)", getRversion(),
    user_agent
  ),
  download.file.extra = sprintf(
    "--header \"User-Agent: R (%s)\"",
    user_agent
  ),
  repos = c(
    RSPM = paste0(
      "https://packagemanager.rstudio.com/all/__linux__/bionic/",
      c(`2020-06-08` = 291)
    )
  )
)
